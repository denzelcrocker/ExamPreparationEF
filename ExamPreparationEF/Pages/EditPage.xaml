<Page x:Class="ExamPreparationEF.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamPreparationEF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content ="Редактирование" />
            <TextBox x:Name="Name"/>
            <TextBox x:Name="Birthday"/>
            <TextBox x:Name="Gender"/>
            <Button Style="{DynamicResource ButtonStyle}" x:Name="EditButton" Content="Изменить" Margin="0,10,0,0" Click="EditButton_Click" />
        </StackPanel>
        <Button Style="{DynamicResource ButtonStyle}" x:Name="BackButton" Content="Назад" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="BackButton_Click"/>
        <Button Style="{DynamicResource ButtonStyle}" x:Name="DeleteButton" Content="Удалить" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Click="DeleteButton_Click" />
    </Grid>
</Page>
